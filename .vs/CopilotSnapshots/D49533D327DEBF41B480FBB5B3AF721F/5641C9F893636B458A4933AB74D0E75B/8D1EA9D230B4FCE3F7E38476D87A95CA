        { 
            "MÈO", "CHÓ", "CÂY", "HOA", "MẶT TRỜI", "NGÔI SAO", "XE HƠI", 
            "NHÀ", "SÁCH", "TÁO", "CHUỐI", "CÁ", "CHIM", "TRĂNG" 
        };

